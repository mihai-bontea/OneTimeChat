<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mob_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/moba_status"
                android:layout_width="25dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:contentDescription="READ"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.515"
                app:srcCompat="@color/moba_unread"
                tools:srcCompat="@color/moba_unread" />

            <TextView
                android:id="@+id/moba_name"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_marginStart="16dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="20sp"
                android:text="@string/mihai_cira"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/moba_status"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <![CDATA[

                    />
                ]]>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>