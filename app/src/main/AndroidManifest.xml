<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onetimechat">

    <!--  PERMISSIONS  -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <!--  PROCESS MOBA BEFORE SENDING ACTIVITY  -->
        <activity
            android:name="com.example.onetimechat.ProcessMessage"
            android:exported="false">
        </activity>

        <!--  SEND MOBA ACTIVITY  -->
        <activity
            android:name="com.example.onetimechat.SendMessage"
            android:exported="true">
        </activity>

        <!--  SHOW MOBA FULLSCREEN ACTIVITY  -->
        <activity
            android:name="com.example.onetimechat.ui.main.ShowMessage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_show_moba"
            android:theme="@style/FullscreenTheme"
            android:exported="false">
        </activity>

        <!--  LOGIN ACTIVITY  -->
        <activity
            android:name="com.example.onetimechat.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--  REGISTER ACTIVITY  -->
        <activity
            android:name="com.example.onetimechat.RegisterActivity"
            android:exported="true">
        </activity>

        <!--  MAIN ACTIVITY  -->
        <activity
            android:name="com.example.onetimechat.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            android:exported="false">
        </activity>
    </application>

</manifest>